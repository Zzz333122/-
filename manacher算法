//manacher算法 p3805
#include <bits/stdc++.h>
using namespace std;

const int N = 2e8 + 10;

string s;
int p[N];
void manacher()
{
    string t;
    t.push_back('#');
    for (int i = 0; i < s.size(); i++) // 构建虚拟字符串
    {
      t.push_back(s[i]);
      t.push_back('#');
    }
    t=' '+t;
    int mx = 0; // 记录最长回文子串长度
    // len是以i为中心扩出来回文半径
    for (int i = 1, c = 1, r = 1, len = 0; i < t.size(); i++)//r是最长回文半径的有边界
    {
        len = r >= i ? min(p[2 * c - i], r - i+1) : 1;//记得是r-i+1（下标从1开始，所以记得-1）
        while (i - len >= 1 && i + len < t.size() && t[i + len] == t[i - len])
            len++;
        if (len + i -1> r)
        {
            r = len + i - 1;
            c = i;
        }
        mx = max(mx, len);
        p[i] = len;
    }
    cout << mx - 1 << endl;//-1******
}

int main()
{
    ios::sync_with_stdio(0);
    cin.tie(0);
    cout.tie(0);
    cin >> s;
    manacher();
    return 0;
}
